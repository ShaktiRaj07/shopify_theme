<style>
  /* icon with text */
  .available-sec {
    padding: 2rem 0;
    background: #efecec;
  }
  .available-sec .section-heading {
    margin: 0 0 2rem;
  }
  .available-sec .section-heading h2 {
   margin: 0px 0px 9.5rem;
   font-size: 3.8rem;
  }
  .available-sec .section-heading p {
    margin: 0;
  }
  .available-sec-inner {
    display: flex;
    align-items: center;
    margin-left: -1.5rem;
    margin-right: -1.5rem;
    margin-bottom: 4rem;
  }
  .available-sec-inner .available-sec-cols {
    flex: 1 1 0;
    padding: 0 1.5rem;
    display: flex;
    align-items: center;
  }
  .available-sec-inner .available-sec-cols .available-sec-img {
    width: 58px;
    height: 58px;
    border-radius: 50px;
    background: #3f5147;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 15px;
    flex: 0 0 58px;
  }
  .available-sec-inner .available-sec-cols p {
    margin: 0;
    font-size: 1.4rem;
  }
  .available-sec-inner .available-sec-cols h5 {
    margin: 0;
    font-weight: 600;
    text-transform: uppercase;
    font-size: 1.6rem;
  }

</style>

<div class="available-sec">
  <div class="page-width">
    <div class="section-heading">
      <h2>{{ section.settings['section-heading'] }}</h2>
      <p>{{ section.settings.para }}</p>
    </div>
    <div class="available-sec-inner">
      {%- for block in section.blocks -%}
        <div class="available-sec-cols">
          <div class="available-sec-img">
            {{ block.settings.image | img_url: '' | img_tag }}
          </div>
          <div class="available-sec-text">
            <h5>{{ block.settings.heading }}</h5>
            <span class="content-text">
              <p>{{ block.settings.content }}</p>
            </span>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "icon-text",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "section-heading",
      "label": "Heading Label"
    },
    {
          "type": "richtext",
          "id": "para",
          "label": "Paragraph"
    }
  ],
  "blocks": [
    {
      "type": "icon-text",
      "name": "icon-text",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "heading"
        },
        {
          "type": "text",
          "id": "content",
          "label": "content"
        }

      ]
    }
  ],
  "presets": [
    {
      "name": "Icon with Text",
      "blocks": [
        {
          "type": "icon-text"
        }

      ]
    }
  ]
}
{% endschema %}
