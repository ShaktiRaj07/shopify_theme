<style>
.info-grid-section{
  width:1348px;
  text-align:center;
  margin-top: 6.5rem;
  margin-bottom: 5.5rem;
}
.header-text {
  font-weight: 600 !important;
  line-height: 1.2;
  font-style: italic;
}   
.container {
  display: flex;
  width: 100%;
  padding: 4% 2%;
  box-sizing: border-box;
  height: 100vh;
}

.box {
  flex: 1;
  overflow: hidden;
  transition: .5s;
  margin: 0 2%;
  box-shadow: 0 20px 30px rgba(0,0,0,.1);
  line-height: 0;
}

.box > img {
  width: 200%;
  height: calc(100% - 10vh);
  object-fit: cover; 
  transition: .5s;
}

.box > span {
  font-size: 3.2vh;
  display: block;
  text-align: center;
  height: 10vh;
  line-height: 2.6;
}

.box:hover { flex: 1 1 50%; }
.box:hover > img {
  width: 100%;
  height: 100%;
}
 

</style>
<section class="info-grid-section">
    <div class="heading">
        {%- if section.settings.main_heading != blank -%}
            <h1 class="header-text">{{ section.settings.main_heading }}</h1>
        {%- endif -%}
    </div>
  
  {%- if section.blocks.info_blocks != empty -%}
    <div class="container">
       {%- for block in section.blocks -%}
            {%- case block.type -%}
                {%- when 'info_blocks' -%}
                  <div class="box">
                       {%- if block.settings.info_image != blank -%}
                          <img src="{{ block.settings.info_image | image_url: width: 1080 }}" alt="{{ block.settings.info_title }}">
                       {%- endif -%}
                  {%- if block.settings.info_title != blank -%}
                      <span class="box-text">{{ block.settings.info_title }}</span>
                  {%- endif -%}  
                  </div>
              </a>
              {%- endcase -%}
       {%- endfor -%}
    </div>
  {%- endif -%}
</section>

{% schema %}
  {
  "name": "Grid Section",
  "class": "gridsection",
  "settings": [

     {
      "type": "text",
      "id": "main_heading",
      "label": "Heading",
      "info": "Section Heading"
    }
    
  ],
  "blocks": [
    {
      "name": "Info Blocks",
      "type": "info_blocks",
      "settings": [
        {
          "type": "image_picker",
          "id": "info_image",
          "label": "Info Image",
          "info": "Placeholder Image"
        },
        {
          "type": "richtext",
          "id": "info_title",
          "label": "Info Title",
          "info": "Info Title"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Grid Section"
    }
  ]
}  
{% endschema %}

